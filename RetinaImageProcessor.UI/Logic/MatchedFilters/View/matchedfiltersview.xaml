<UserControl x:Class="RetinaImageProcessor.UI.Logic.MatchedFilters.View.MatchedFiltersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RetinaImageProcessor.UI.Logic.MatchedFilters.View">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="3*"/>
      <ColumnDefinition Width="13*"/>
    </Grid.ColumnDefinitions>
    <Menu Grid.Row="0" Grid.ColumnSpan="1" Background="#999999">
      <MenuItem Header="File" FontWeight="Bold">
        <MenuItem Click="LoadImageFile_Click" Header="Load image..."
                  IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
        <MenuItem Click="LoadMaskImageFile_Click" Header="Load mask image..."
                  IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
        <MenuItem Click="LoadCompareImageFile_Click" Header="Load compare image..."
                  IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
        <MenuItem Click="SaveImageFile_Click" Header="Save image..."
                  IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
        <MenuItem Click="SaveResultsFile_Click" Header="Save results..."
                  IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
        <MenuItem Click="SaveMaskFile_Click" Header="Save mask..." IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
      </MenuItem>
      <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Width="2" Background="Black"/>
      <MenuItem Click="AllUpToExtractMinutiae_Click" Header="Automatic" FontWeight="Bold"
                IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
      <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Width="2" Background="Black"/>
      <MenuItem Header="Undo (Ctrl + Z)" FontWeight="Bold" Command="Undo"/>
      <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Width="2" Background="Black"/>
      <MenuItem Header="Redo (Ctrl + Y)" FontWeight="Bold" Command="Redo"/>
    </Menu>
    <Border CornerRadius="8,8,8,8" Grid.Row="0" Grid.Column="1" Width="auto">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="4" Text="Last Operation:" Foreground="Black" FontWeight="Medium" FontSize="14"/>
        <TextBlock Margin="4" Grid.Column="1" Foreground="Black" FontSize="15" FontWeight="Bold"
                   Text="{Binding Path=LastOperationLabel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
      </Grid>
    </Border>
    <ScrollViewer Grid.Column="0" Width="auto" Grid.Row="2" VerticalScrollBarVisibility="Auto">
      <StackPanel IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}">
        <GroupBox Margin="3" Header="Grayscale Conversion" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="3">
            <Grid Margin="5,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <RadioButton Checked="RadioButton_Checked" Content="Red" GroupName="Grayscale"/>
              <RadioButton Checked="RadioButton_Checked" Loaded="GrayscaleRadioButtonGreen_Loaded" Grid.Column="1"
                           Content="Green" GroupName="Grayscale"/>
              <RadioButton Checked="RadioButton_Checked" Grid.Column="2" Content="Blue" GroupName="Grayscale"/>
              <RadioButton Checked="RadioButton_Checked" Grid.Column="3" Content="Average" GroupName="Grayscale"/>
            </Grid>
            <Button Click="ToGrayscale_Click" Margin="1" Content="Convert"/>
          </StackPanel>
        </GroupBox>
        <GroupBox Margin="3" Header="Noise Removal" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="2">
            <Button Click="MedianFilter_Click" Content="Apply Median Filter"
                    IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
          </StackPanel>
        </GroupBox>
        <GroupBox Margin="3" Header="Mask" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="3">
            <Slider Name="maskSlider" Margin="3" Minimum="0" Maximum="255" AutoToolTipPlacement="TopLeft"
                    AutoToolTipPrecision="0"
                    Value="{Binding Path=MaskThreshold, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Click="FindMaskBinarizationThreshold_Click" Margin="1"
                    Content="Find Threshold - From Histogram Data" IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
            <Button Click="CreateMask_Click" Margin="1" Content="Create Mask"
                    IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
          </StackPanel>
        </GroupBox>
        <GroupBox Margin="3" Header="Contrast Enhancement" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="2">
            <Button Click="HistogramEqualization_Click" Margin="1" Content="Equalize Histogram"
                    IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
          </StackPanel>
        </GroupBox>
        <GroupBox Margin="3" Header="Brightness" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="3">
            <Slider Name="brightnessSlider" Margin="3" Minimum="-128" Maximum="128" AutoToolTipPlacement="TopLeft"
                    AutoToolTipPrecision="0"
                    Value="{Binding Path=BrightnessValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Click="BrightnessCorrection_Click" Margin="1" Content="Correct Brightness"
                    IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
          </StackPanel>
        </GroupBox>
        <GroupBox Margin="3" Header="Contrast Enhancement" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="3">
            <Slider Name="constrastBeforeSlider" Margin="3" Minimum="0" Maximum="127" AutoToolTipPlacement="TopLeft"
                    AutoToolTipPrecision="0"
                    Value="{Binding Path=ContrastThresholdBefore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Click="EnhanceContrastBeforeSegmentation_Click" Margin="1"
                    Content="Cut Borders and Stretch Histogram" IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
          </StackPanel>
        </GroupBox>
        <GroupBox Margin="5" Header="Vessel Segmentation" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="2">
            <Button Click="GaussianMatchedFilter_Click" Margin="1" Content="Segment Vessels"
                    IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
          </StackPanel>
        </GroupBox>
        <GroupBox Margin="3" Header="Contrast Enhancement" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="3">
            <Slider Name="constrastAfterSlider" Margin="3" Minimum="0" Maximum="127" AutoToolTipPlacement="TopLeft"
                    AutoToolTipPrecision="0"
                    Value="{Binding Path=ContrastThresholdAfter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Click="EnhanceContrastAfterSegmentation_Click" Margin="1"
                    Content="Cut Borders and Stretch Histogram" IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
          </StackPanel>
        </GroupBox>
        <GroupBox Margin="3" Header="Binarization" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="3">
            <Slider Name="binarizationSlider" Margin="3" Minimum="0" Maximum="255" AutoToolTipPlacement="TopLeft"
                    AutoToolTipPrecision="0"
                    Value="{Binding Path=BinarizationThreshold, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Click="FindEntropyBinarizationThreshold_Click" Margin="1" Content="Find Threshold - Local Etropy"
                    IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
            <Button Click="Binarization_Click" Margin="1" Content="Binarize"
                    IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
          </StackPanel>
        </GroupBox>
        <GroupBox Margin="3" Header="Loose Vessel Removal" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="3" IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}">
            <Grid Margin="3">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <Label Margin="0,0,5,0" Content="Max Vessel Length To Remove"/>
              <TextBox PreviewTextInput="NumberValidationTextBox" Name="RemoveVesselTextBox" Grid.Column="1" Margin="3"
                       Text="{Binding Path=MaxVesselLengthToRemove, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
            <Button Click="RemoveLooseVessels_Click" Margin="1" Content="Remove Loose Vessels"/>
          </StackPanel>
        </GroupBox>
        <GroupBox Margin="3" Header="Image Comparison" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="2">
            <Button Click="CompareImages_Click" Margin="1" Content="Compare Images"
                    IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
          </StackPanel>
        </GroupBox>
        <GroupBox Margin="3" Header="Skeletonization" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="2">
            <Button Click="K3MThinning_Click" Margin="1" Content="Skeletonize(K3M)"
                    IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
          </StackPanel>
        </GroupBox>
        <GroupBox Margin="3" Header="Minutiae Extraction" Background="#777777" FontWeight="Bold">
          <StackPanel Margin="2">
            <Button Click="ExtractMinutiae_Click" Margin="1" Content="Extract Minutiae"
                    IsEnabled="{Binding IsButtonEnabled, Mode=OneWay}"/>
          </StackPanel>
        </GroupBox>
      </StackPanel>
    </ScrollViewer>
    <Grid Row="1" Column="1" RowSpan="2">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="2*"/>
        <RowDefinition Height="3*"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="4*"/>
        <ColumnDefinition Width="3*"/>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="2*"/>
      </Grid.ColumnDefinitions>
      <Border CornerRadius="8,8,8,8" Grid.Row="0" Grid.ColumnSpan="5">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
          </Grid.RowDefinitions>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="4" Text="Processed Image:" Foreground="Black" FontWeight="Medium" FontSize="14"/>
            <TextBlock Margin="4" Grid.Column="1" Foreground="Black" FontSize="15" FontWeight="Bold"
                       Text="{Binding Path=ProcessedFileLabel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
          </Grid>
          <Grid Row="1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="4" Text="Compared Image:" Foreground="Black" FontWeight="Medium" FontSize="14"/>
            <TextBlock Margin="4" Grid.Column="1" Foreground="Black" FontSize="15" FontWeight="Bold"
                       Text="{Binding Path=ComparedFileLabel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
          </Grid>
          <Grid Row="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="4" Text="Mask Image(If custom loaded):" Foreground="Black" FontWeight="Medium"
                       FontSize="14"/>
            <TextBlock Margin="4" Grid.Column="1" Foreground="Black" FontSize="15" FontWeight="Bold"
                       Text="{Binding Path=MaskFileLabel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
          </Grid>
        </Grid>
      </Border>
      <Border CornerRadius="8,8,8,8" Grid.Row="1" Margin="1" Background="Black">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
          </Grid.RowDefinitions>
          <Polygon Stretch="Fill" Fill="White" Opacity="0.8" Margin="5">
            <Polygon.Points>
              <Binding>                <!-- constructor argument:
                     HistogramPoints
                -->

              </Binding>
            </Polygon.Points>
          </Polygon>
          <Polygon Grid.Row="1" Stretch="Fill" Fill="Orange" Opacity="1">
            <Polygon.Points>
              <Binding>                <!-- constructor argument:
                     SliderPoints
                -->

              </Binding>
            </Polygon.Points>
          </Polygon>
          <TextBlock Grid.Row="2" Text="Histogram" Foreground="White" FontSize="20" TextWrapping="Wrap"
                     TextAlignment="Center" FontWeight="Bold"/>
        </Grid>
      </Border>
      <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" CornerRadius="8,8,8,8" Margin="1"
              Background="Black">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
          </Grid.RowDefinitions>
          <Image Name="PreviousImage1" Margin="5"/>
          <Image Name="PreviousImage2" Grid.Column="1" Margin="5"/>
          <TextBlock Grid.ColumnSpan="2" Grid.Row="1" Text="Previous Images" Foreground="White" FontSize="20"
                     TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold"/>
        </Grid>
      </Border>
      <Border Grid.Row="1" Grid.Column="3" CornerRadius="8,8,8,8" Margin="1" Background="Black">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
          </Grid.RowDefinitions>
          <Image Name="MaskImage" Margin="5"/>
          <TextBlock Grid.Row="1" Text="Mask" Foreground="White" FontSize="20" TextWrapping="Wrap"
                     TextAlignment="Center" FontWeight="Bold"/>
        </Grid>
      </Border>
      <Border Grid.Row="1" Grid.Column="4" CornerRadius="8,8,8,8" Margin="1" Background="Black">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
          </Grid.RowDefinitions>
          <Image Name="CoOccurenceImage" Margin="5"/>
          <TextBlock Grid.Row="1" Text="Co-occurence Matrix" Foreground="White" FontSize="20" TextWrapping="Wrap"
                     TextAlignment="Center" FontWeight="Bold"/>
        </Grid>
      </Border>
      <Border Grid.Row="2" CornerRadius="8,8,8,8" Margin="1" Background="Black">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
          </Grid.RowDefinitions>
          <Grid Row="0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Terminations" Foreground="White" FontSize="20" TextWrapping="Wrap"
                       TextAlignment="Center" FontWeight="Bold"/>
            <TextBlock Grid.Column="1" Text="Bifurcations" Foreground="White" FontSize="20" TextWrapping="Wrap"
                       TextAlignment="Center" FontWeight="Bold"/>
            <TextBlock Grid.Column="2" Text="Crossovers" Foreground="White" FontSize="20" TextWrapping="Wrap"
                       TextAlignment="Center" FontWeight="Bold"/>
          </Grid>
          <Grid Row="1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Foreground="White" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"
                       FontWeight="Bold"
                       Text="{Binding Path=TerminationCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Column="1" Foreground="White" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"
                       FontWeight="Bold"
                       Text="{Binding Path=BifurcationCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Column="2" Foreground="White" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"
                       FontWeight="Bold"
                       Text="{Binding Path=CrossoverCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
          </Grid>
          <Image Name="CurrentImage" Grid.Row="2" Margin="5"/>
          <TextBlock Grid.Row="3" Text="Current Image" Foreground="White" FontSize="20" TextWrapping="Wrap"
                     TextAlignment="Center" FontWeight="Bold"/>
        </Grid>
      </Border>
      <Border Grid.Row="2" Grid.Column="1" CornerRadius="8,8,8,8" Margin="1" Background="Black">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
          </Grid.RowDefinitions>
          <Grid Row="0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition/>
              <ColumnDefinition/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Accuracy" Foreground="White" FontSize="18" TextWrapping="Wrap"
                       TextAlignment="Center" FontWeight="Bold"/>
            <TextBlock Grid.Column="1" Text="Sensitivity (TPR)" Foreground="White" FontSize="18" TextWrapping="Wrap"
                       TextAlignment="Center" FontWeight="Bold"/>
            <TextBlock Grid.Column="2" Text="Specificity (TNR)" Foreground="White" FontSize="18" TextWrapping="Wrap"
                       TextAlignment="Center" FontWeight="Bold"/>
            <TextBlock Grid.Column="3" Text="False Positive Rate (FPR)" Foreground="White" FontSize="18"
                       TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold"/>
          </Grid>
          <Grid Row="1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition/>
              <ColumnDefinition/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Foreground="White" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"
                       FontWeight="Bold"
                       Text="{Binding Path=Accuracy, StringFormat=F4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Column="1" Foreground="White" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"
                       FontWeight="Bold"
                       Text="{Binding Path=TruePositiveRate, StringFormat=F4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Column="2" Foreground="White" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"
                       FontWeight="Bold"
                       Text="{Binding Path=TrueNegativeRate, StringFormat=F4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Column="3" Foreground="White" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"
                       FontWeight="Bold"
                       Text="{Binding Path=FalsePositiveRate, StringFormat=F4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
          </Grid>
          <Image Name="CompareImage" Grid.Row="2" Margin="5"/>
          <TextBlock Grid.Row="3" Text="Compare Image" Foreground="White" FontSize="20" TextWrapping="Wrap"
                     TextAlignment="Center" FontWeight="Bold"/>
        </Grid>
      </Border>
      <Border Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" CornerRadius="8,8,8,8" Margin="1"
              Background="Black">
        <Grid Margin="5">
          <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
          </Grid.RowDefinitions>
          <Image Name="GaussianImage1" Grid.Column="0" Margin="5"/>
          <Image Name="GaussianImage2" Grid.Column="1" Margin="5"/>
          <Image Name="GaussianImage3" Grid.Column="2" Margin="5"/>
          <Image Name="GaussianImage4" Grid.Column="3" Margin="5"/>
          <Image Name="GaussianImage5" Grid.Column="0" Grid.Row="1" Margin="5"/>
          <Image Name="GaussianImage6" Grid.Column="1" Grid.Row="1" Margin="5"/>
          <Image Name="GaussianImage7" Grid.Column="2" Grid.Row="1" Margin="5"/>
          <Image Name="GaussianImage8" Grid.Column="3" Grid.Row="1" Margin="5"/>
          <Image Name="GaussianImage9" Grid.Column="0" Grid.Row="2" Margin="5"/>
          <Image Name="GaussianImage10" Grid.Column="1" Grid.Row="2" Margin="5"/>
          <Image Name="GaussianImage11" Grid.Column="2" Grid.Row="2" Margin="5"/>
          <Image Name="GaussianImage12" Grid.Column="3" Grid.Row="2" Margin="5"/>
          <TextBlock Grid.Row="3" Grid.ColumnSpan="4"
                     Text="Segmentation masks convolved with image for given angles (from 0º, by 15º)"
                     Foreground="White" TextWrapping="Wrap" TextAlignment="Center" FontSize="20" FontWeight="Bold"/>
        </Grid>
      </Border>
    </Grid>
  </Grid>
</UserControl>